{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": false,
    "strict": false,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/FilePicker.jsx",
    "src/context/FilePickerContext.js",
    "src/context/filePicker.js",
    "src/components/ConversionFormatsGroup.jsx",
    "src/utils/helpers/getFormat.js",
    "src/utils/hooks/useDetectMouseOutside.js"
  ],
  "exclude": ["node_modules"]
}
